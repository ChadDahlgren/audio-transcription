        "husky": "^8.0.3"
    },
    "devDependencies": {
        "@types/node": "^20.11.5",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.4",
        "prisma": "^5.8.1",
        "ts-node": "^10.9.2",
