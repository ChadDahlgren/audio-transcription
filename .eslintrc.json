{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "db/*",
    "prisma/*",
    "node_modules/*",
    "dist/*",
    "**/generated/*"
  ],
  "rules": {
    "@typescript-eslint/no-namespace": "off"
  }
}
