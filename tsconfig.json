{
  "include": ["src/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
  }
}
